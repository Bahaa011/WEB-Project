<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit User</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Optional: Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/edit-user.css">
</head>

<body>
    <!-- Include Header -->
    <%- include('partials/header') %>

        <div class="edit-user-container">
            <h2>Edit User</h2>

            <% if (typeof error !=='undefined' ) { %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
                <% } %>

                    <form action="/api/users/<%= user.id %>/edit" method="POST" enctype="multipart/form-data">
                        <!-- Hidden input for user ID -->
                        <input type="hidden" name="id" value="<%= user.id %>">

                        <div class="edit-user-form-group">
                            <label for="name">Name</label>
                            <input type="text" id="name" name="username" class="form-control">
                        </div>

                        <div class="edit-user-form-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" class="form-control">
                        </div>

                        <div class="edit-user-form-group">
                            <label for="password">Password</label>
                            <input type="text" id="password" name="password" class="form-control">
                        </div>

                        <div class="edit-user-form-group">
                            <label for="bio">Bio</label>
                            <textarea id="bio" name="bio" rows="4" class="form-control"></textarea>
                        </div>

                        <div class="edit-user-form-group">
                            <label for="profilePicture">Profile Picture</label>
                            <input type="file" id="profilePicture" name="profile_picture" class="form-control-file"
                                accept="image/*">
                            <% if (user.profilePicture) { %>
                                <img src="<%= user.profilePicture %>" alt="Profile Picture" class="img-thumbnail">
                                <% } %>
                        </div>

                        <div class="edit-user-form-group">
                            <button type="submit">Save Changes</button>
                        </div>
                    </form>
        </div>

        <!-- Include Footer -->
        <%- include('partials/footer') %>

            <!-- Bootstrap JS -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>