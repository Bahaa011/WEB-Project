<head>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Optional: Bootstrap Icons for Social Media -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        /* Reset body styles */
        body {
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #1e1e2f;
            color: white;
        }

        /* Header styling */
        header {
            background: linear-gradient(135deg, #2e2e42, #1e1e2f);
            /* Dark gradient background */
            padding: 20px 0;
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
        }

        /* Header container */
        .header-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        /* Logo styling */
        .logo {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .logo img {
            height: 50px;
            width: 50px;
            border-radius: 50%;
            transition: transform 0.3s ease;
        }

        .logo img:hover {
            transform: scale(1.1);
        }

        .logo a {
            font-size: 1.8rem;
            color: #ffd700;
            font-weight: bold;
            text-decoration: none;
            letter-spacing: 2px;
            transition: color 0.3s ease;
        }

        .logo a:hover {
            color: #1abc9c;
        }

        /* Navigation styling */
        .nav {
            display: flex;
            gap: 30px;
        }

        .nav-item {
            list-style: none;
        }

        .nav-link {
            color: white;
            font-size: 1rem;
            font-weight: 500;
            text-decoration: none;
            transition: color 0.3s ease, transform 0.3s ease;
        }

        .nav-link:hover {
            color: #ffd700;
            transform: translateY(-2px);
        }

        /* Button styling */
        .btn {
            font-weight: bold;
            padding: 8px 20px;
            border-radius: 20px;
            transition: background-color 0.3s, transform 0.2s;
        }

        .btn-outline-light {
            border: 2px solid #ffd700;
            color: #ffd700;
        }

        .btn-outline-light:hover {
            background-color: #ffd700;
            color: #2e2e42;
            transform: translateY(-3px);
        }

        .btn-light {
            background-color: #ffd700;
            color: #1e1e2f;
            border: 2px solid #ffd700;
        }

        .btn-light:hover {
            background-color: #1abc9c;
            color: white;
            transform: translateY(-3px);
        }

        /* Social Media Icons */
        .social-icons {
            display: flex;
            gap: 15px;
            align-items: center;
        }

        .social-icon {
            font-size: 1.5rem;
            color: white;
            transition: color 0.3s ease, transform 0.3s ease;
        }

        .social-icon:hover {
            color: #ffd700;
            transform: scale(1.1);
        }

        /* Actions */
        .actions {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        /* Responsive design */
        @media (max-width: 768px) {
            .header-container {
                flex-direction: column;
                text-align: center;
            }

            .nav {
                margin-top: 10px;
                flex-direction: column;
                gap: 15px;
            }

            .logo {
                margin-bottom: 15px;
            }

            .social-icons {
                margin-top: 10px;
                justify-content: center;
            }
        }
    </style>
</head>

<header>
    <div class="header-container">
        <!-- Logo -->
        <div class="logo">
            <img src="images/trophy.png" alt="logo">
            <a href="/">Speedrun Hub</a>
        </div>

        <!-- Navigation -->
        <nav>
            <ul class="nav">
                <li class="nav-item"><a href="/games" class="nav-link">Games</a></li>
                <li class="nav-item"><a href="/users" class="nav-link">Users</a></li>
                <li class="nav-item"><a href="/help" class="nav-link">Help</a></li>
                <li class="nav-item"><a href="/about" class="nav-link">About</a></li>
            </ul>
        </nav>

        <!-- Actions -->
        <div class="actions">
            <a href="/login" class="btn btn-outline-light btn-sm">Login</a>
            <a href="/register" class="btn btn-light btn-sm">Sign Up</a>

            <!-- Social Media Icons -->
            <div class="social-icons">
                <a href="https://twitter.com" class="social-icon" target="_blank"><i class="bi bi-twitter"></i></a>
                <a href="https://facebook.com" class="social-icon" target="_blank"><i class="bi bi-facebook"></i></a>
                <a href="https://discord.com" class="social-icon" target="_blank"><i class="bi bi-discord"></i></a>
            </div>
        </div>
    </div>
</header>