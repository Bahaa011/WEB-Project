<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Game</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Optional: Bootstrap Icons for Social Media -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/create-game.css">
</head>

<body>

    <!-- Header Section -->
    <%- include('partials/header') %>

        <!-- Game Creation Form -->
        <div class="create-games-form-container">
            <h2>Create a New Game</h2>
            <% if (typeof error !=='undefined' ) { %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
                <% } %>
                    <form action="/api/games/" method="post" enctype="multipart/form-data">
                        <div class="create-games-form-group">
                            <label for="name">Game Name</label>
                            <input type="text" id="name" name="name" class="form-control" required>
                        </div>

                        <div class="create-games-form-group">
                            <label for="rules">Rules</label>
                            <textarea id="rules" name="rules" rows="4" class="form-control" required></textarea>
                        </div>

                        <div class="create-games-form-group">
                            <label for="dev">Developer</label>
                            <input type="text" id="dev" name="dev" class="form-control" required>
                        </div>

                        <div class="create-games-form-group">
                            <label for="release_date">Release Date</label>
                            <input type="date" id="date" name="date" class="form-control" required>
                        </div>

                        <div class="create-games-form-group">
                            <label for="photo">Game Photo</label>
                            <input type="file" id="photo" name="icon" accept="image/*" class="form-control-file">
                        </div>

                        <div class="create-games-form-group">
                            <button type="submit" class="btn btn-primary">Create Game</button>
                        </div>
                    </form>
        </div>

        <!-- Bootstrap JS & jQuery -->
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

</body>

</html>