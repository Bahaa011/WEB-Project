<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #1c1c1c;
            color: #fff;
        }

        .users-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .users-header h1 {
            color: #ffd700;
            font-size: 2.5rem;
        }

        .users-table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
        }

        .users-table th {
            color: #ffd700;
            text-align: left;
            padding: 12px;
            font-weight: bold;
        }

        .users-table td {
            padding: 12px;
            text-align: left;
            color: #ddd;
        }

        .users-table tbody tr:nth-child(odd) {
            background-color: #292929;
        }

        .users-table tbody tr:nth-child(even) {
            background-color: #323232;
        }

        .users-table tbody tr:hover {
            background-color: #444444;
        }

        .user-profile-link {
            color: #ffd700;
            text-decoration: none;
            font-weight: bold;
        }

        .user-profile-link:hover {
            text-decoration: underline;
        }

        .footer {
            text-align: center;
            margin-top: 20px;
            font-size: 0.9rem;
            color: #d1d1d1;
        }

        .footer a {
            color: #ffd700;
            text-decoration: none;
            font-weight: bold;
        }

        .footer a:hover {
            text-decoration: underline;
        }

        .search-bar {
            margin-bottom: 20px;
            text-align: center;
        }

        .search-bar input {
            width: 80%;
            padding: 10px;
            border: 2px solid #ffd700;
            border-radius: 5px;
            background-color: #292929;
            color: #fff;
        }

        .search-bar button {
            padding: 10px 20px;
            background-color: #ffd700;
            border: none;
            border-radius: 5px;
            color: #1c1c1c;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .search-bar button:hover {
            background-color: #e6b800;
        }
    </style>
</head>

<body>
    <!-- Header -->
    <%- include('partials/header') %>

        <div class="container my-4">
            <!-- Users Header -->
            <div class="users-header">
                <h1>Users</h1>
                <p>Browse all registered users on the platform.</p>
            </div>

            <!-- Search Bar -->
            <div class="search-bar">
                <form action="/api/users/search" method="GET">
                    <input type="text" name="query" placeholder="Search for a user by username" required>
                    <button type="submit">Search</button>
                </form>
            </div>

            <!-- Users Table -->
            <div class="table-responsive">
                <% if (users.length===0) { %>
                    <p>No users found.</p>
                    <% } else { %>
                        <table class="table users-table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Username</th>
                                    <th>Email</th>
                                    <th>Registration Date</th>
                                    <th>Profile</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% users.forEach((user, index)=> { %>
                                    <tr>
                                        <td>
                                            <%= index + 1 %>
                                        </td>
                                        <td>
                                            <%= user.username %>
                                        </td>
                                        <td>
                                            <%= user.email %>
                                        </td>
                                        <td>
                                            <%= user.date %>
                                        </td>
                                        <td>
                                            <a href="/users/<%= user.id %>" class="user-profile-link">View Profile</a>
                                        </td>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>
                        <% } %>
            </div>
        </div>

        <!-- Footer -->
        <%- include('partials/footer') %>

</body>

</html>